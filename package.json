{
  "name": "VIM_backend",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@sap-cloud-sdk/http-client": "^3.20.0",
    "@sap-cloud-sdk/resilience": "^3.20.0",
    "@sap/cds": "^7",
    "@sap/cds-hana": "^2.0.0",
    "@sap/cds-odata-v2-adapter-proxy": "^1.9.21",
    "@sap/hana-client": "^2.22.29",
    "@sap/logging": "^8.2.0",
    "@sap/xsenv": "^5.2.0",
    "@sap/xssec": "^4.2.2",
    "express": "^4.19.2",
    "hdb": "^0.19.9",
    "moment": "^2.29.4",
    "passport": "^0.6.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^7",
    "@sap/hdi-deploy": "4.8.0",
    "@sap/ux-specification": "^1.108.12",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "start": "cds-serve",
    "undeploy": "cf undeploy VIM_backend --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "requires": {
      "auth": "xsuaa",
      "db": "hana",
      "odataS4_V2": {
        "kind": "odata-v2",
        "csrf": true,
        "csrfInBatch": true,
        "credentials": {
          "destination": "S4_HANA"
        }
      },
      "odataBackEnd": {
        "kind": "odata-v2",
        "credentials": {
          "destination": "VIM_backend_TE"
        }
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  }
}
